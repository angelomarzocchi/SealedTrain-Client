<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen Theme. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">?attr/backgroundColor</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.Secure_unico</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" >?attr/backgroundColor</item>
        <item name="android:navigationBarColor">?attr/backgroundColor</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>